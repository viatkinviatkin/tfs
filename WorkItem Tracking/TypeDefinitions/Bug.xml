<?xml version="1.0" encoding="utf-8"?>
<Witd:WITD application="Work item type editor" version="1.0" xmlns:Witd="http://schemas.microsoft.com/VisualStudio/2008/workitemtracking/typedef">
  <WORKITEMTYPE name="Ошибка" refname="Microsoft.VSTS.WorkItemTypes.Bug">
    <DESCRIPTION>Описание и отслеживание работы, выполненной для исправления ошибки и проверки исправления.</DESCRIPTION>
    <FIELDS>
      <!-- ********** Core fields ******************* -->
      <FIELD name="ID" refname="System.Id" type="Integer" reportable="dimension" />
      <FIELD name="Название" refname="System.Title" type="String" reportable="dimension">
        <REQUIRED />
        <HELPTEXT>Краткое описание ошибки, используемое для ее различения в списке или отчете</HELPTEXT>
      </FIELD>
      <FIELD name="Кому назначено" refname="System.AssignedTo" type="String" reportable="dimension" syncnamechanges="true">
        <VALIDUSER />
        <WHENNOT value="Предложено" field="System.State">
          <REQUIRED />
        </WHENNOT>
        <ALLOWEXISTINGVALUE />
        <ALLOWEDVALUES expanditems="true" filteritems="excludegroups">
          <LISTITEM value="[Project]\Участники" />
        </ALLOWEDVALUES>
        <HELPTEXT>Лицо, выполняющее анализ или исправление ошибки, или проверяющее исправленную ошибку</HELPTEXT>
      </FIELD>
      <FIELD name="Кто проверяет" refname="IIS.Tester" type="String" reportable="dimension">
        <ALLOWEXISTINGVALUE />
        <VALIDUSER />
        <WHENNOT value="Предложено" field="System.State">
          <REQUIRED />
        </WHENNOT>
        <ALLOWEDVALUES expanditems="true" filteritems="excludegroups">
          <LISTITEM value="[Project]\Участники" />
        </ALLOWEDVALUES>
        <HELPTEXT>Кто проверяет исправление ошибки</HELPTEXT>
      </FIELD>
      <FIELD name="Путь области" refname="System.AreaPath" type="TreePath" reportable="dimension">
        <HELPTEXT>Область продукта, с которой связана эта ошибка</HELPTEXT>
      </FIELD>
      <FIELD name="Путь итерации" refname="System.IterationPath" type="TreePath" reportable="dimension">
        <HELPTEXT>Итерация, в которой эта ошибка будет исправлена</HELPTEXT>
      </FIELD>
      <FIELD name="Журнал" refname="System.History" type="History">
        <HELPTEXT>Поток дискуссии плюс автоматическая запись изменений</HELPTEXT>
      </FIELD>
      <FIELD name="Состояние" refname="System.State" type="String" reportable="dimension">
        <HELPTEXT>Состояние рабочего процесса ошибки</HELPTEXT>
      </FIELD>
      <FIELD name="Причина" refname="System.Reason" type="String" reportable="dimension">
        <HELPTEXT>Причина, по которой ошибка находится в текущем состоянии</HELPTEXT>
      </FIELD>
      <FIELD name="Дата изменения" refname="System.ChangedDate" type="DateTime" reportable="dimension" />
      <FIELD name="Кем изменено" refname="System.ChangedBy" type="String" reportable="dimension" syncnamechanges="true">
        <VALIDUSER />
        <ALLOWEXISTINGVALUE />
      </FIELD>
      <FIELD name="Дата создания" refname="System.CreatedDate" type="DateTime" reportable="dimension" />
      <FIELD name="Кем создано" refname="System.CreatedBy" type="String" reportable="dimension" syncnamechanges="true" />
      <FIELD name="Описание" refname="System.Description" type="HTML">
        <HELPTEXT>Описание ошибки</HELPTEXT>
      </FIELD>
      <!-- *************** Common Fields ****************   -->
      <FIELD name="Дата изменения состояния" refname="Microsoft.VSTS.Common.StateChangeDate" type="DateTime">
        <WHENCHANGED field="System.State">
          <SERVERDEFAULT from="clock" />
        </WHENCHANGED>
        <WHENNOTCHANGED field="System.State">
          <READONLY />
        </WHENNOTCHANGED>
      </FIELD>
      <FIELD name="Дата активации" refname="Microsoft.VSTS.Common.ActivatedDate" type="DateTime" reportable="dimension">
        <WHENNOTCHANGED field="System.State">
          <READONLY />
        </WHENNOTCHANGED>
      </FIELD>
      <FIELD name="Активировал" refname="Microsoft.VSTS.Common.ActivatedBy" type="String" syncnamechanges="true" reportable="dimension">
        <WHENNOTCHANGED field="System.State">
          <READONLY />
        </WHENNOTCHANGED>
        <ALLOWEXISTINGVALUE />
      </FIELD>
      <FIELD name="Дата выполнения" refname="Microsoft.VSTS.Common.ResolvedDate" type="DateTime" reportable="dimension">
        <WHENNOTCHANGED field="System.State">
          <READONLY />
        </WHENNOTCHANGED>
      </FIELD>
      <FIELD name="Кем выполнено" refname="Microsoft.VSTS.Common.ResolvedBy" type="String" syncnamechanges="true" reportable="dimension">
        <WHENNOTCHANGED field="System.State">
          <READONLY />
        </WHENNOTCHANGED>
        <ALLOWEXISTINGVALUE />
      </FIELD>
      <FIELD name="Причина выполнения" refname="Microsoft.VSTS.Common.ResolvedReason" type="String" reportable="dimension">
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Не ошибка" />
          <LISTITEM value="Не воспроизводится" />
          <LISTITEM value="Дубликат" />
          <LISTITEM value="Исправлено" />
          <LISTITEM value="Устарело" />
        </ALLOWEDVALUES>
        <FROZEN />
        <HELPTEXT>Причина, по которой ошибка была разрешена</HELPTEXT>
      </FIELD>
      <FIELD name="Дата закрытия" refname="Microsoft.VSTS.Common.ClosedDate" type="DateTime" reportable="dimension">
        <WHENNOTCHANGED field="System.State">
          <READONLY />
        </WHENNOTCHANGED>
      </FIELD>
      <FIELD name="Кем закрыто" refname="Microsoft.VSTS.Common.ClosedBy" type="String" syncnamechanges="true" reportable="dimension">
        <WHENNOTCHANGED field="System.State">
          <READONLY />
        </WHENNOTCHANGED>
        <ALLOWEXISTINGVALUE />
      </FIELD>
      <FIELD name="Приоритет" refname="Microsoft.VSTS.Common.Priority" type="Integer" reportable="dimension">
        <REQUIRED />
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="1" />
          <LISTITEM value="2" />
          <LISTITEM value="3" />
          <LISTITEM value="4" />
        </ALLOWEDVALUES>
        <DEFAULT from="value" value="1" />
        <HELPTEXT>Общий приоритет ошибки с учетом целей проекта</HELPTEXT>
      </FIELD>
      <FIELD name="Ранг стека" refname="Microsoft.VSTS.Common.StackRank" type="Double" reportable="dimension">
        <DEFAULT from="value" value="1" />
        <SUGGESTEDVALUES expanditems="true">
          <LISTITEM value="1" />
          <LISTITEM value="2" />
          <LISTITEM value="3" />
          <LISTITEM value="4" />
          <LISTITEM value="5" />
        </SUGGESTEDVALUES>
        <HELPTEXT>Приоритет работы над элементом по сравнению с другими рабочими элементами того же типа.</HELPTEXT>
      </FIELD>
      <FIELD name="Рассмотрение" refname="Microsoft.VSTS.Common.Triage" type="String" reportable="dimension">
        <REQUIRED />
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Подготовка" />
          <LISTITEM value="Ожидание" />
          <LISTITEM value="Доработать" />
          <LISTITEM value="Согласовано" />
        </ALLOWEDVALUES>
        <DEFAULT from="value" value="Подготовка" />
        <HELPTEXT>Состояние рассмотрения ошибки</HELPTEXT>
      </FIELD>
      <FIELD name="Важность" refname="Microsoft.VSTS.Common.Severity" type="String" reportable="dimension">
        <REQUIRED />
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="1 - критическая" />
          <LISTITEM value="2 - высокая" />
          <LISTITEM value="3 - средняя" />
          <LISTITEM value="4 - низкая" />
        </ALLOWEDVALUES>
        <DEFAULT from="value" value="3 - средняя" />
        <HELPTEXT>Оценка воздействия ошибки на проект</HELPTEXT>
      </FIELD>
      <FIELD name="Операция" refname="Microsoft.VSTS.Common.Activity" type="String" reportable="dimension">
        <SUGGESTEDVALUES expanditems="true">
          <LISTITEM value="Анализ" />
          <LISTITEM value="Проектирование" />
          <LISTITEM value="Разработка" />
          <LISTITEM value="Тестирование" />
          <LISTITEM value="Документирование" />
          <LISTITEM value="Развертывание" />
          <LISTITEM value="Поддержка" />
        </SUGGESTEDVALUES>
        <DEFAULT from="value" value="Разработка" />
      </FIELD>
      <!-- **************** Test Integration Fields *************************************************  -->
      <FIELD name="О системе" refname="Microsoft.VSTS.TCM.SystemInfo" type="HTML">
        <HELPTEXT>Контекст теста, предоставляется автоматически</HELPTEXT>
      </FIELD>
      <FIELD name="Шаги для воспроизведения" refname="Microsoft.VSTS.TCM.ReproSteps" type="HTML">
        <HELPTEXT>Последовательность действий для воспроизведения ошибки</HELPTEXT>
      </FIELD>
      <!-- **************** Build Integration Fields ******************************************************  -->
      <FIELD name="Найдено в" refname="Microsoft.VSTS.Build.FoundIn" type="String" reportable="dimension">
        <SUGGESTEDVALUES expanditems="true">
          <LISTITEM value="&lt;Нет&gt;" />
        </SUGGESTEDVALUES>
        <HELPTEXT>Построение, в котором ошибка была обнаружена</HELPTEXT>
      </FIELD>
      <FIELD name="Построение интеграции" refname="Microsoft.VSTS.Build.IntegrationBuild" type="String" reportable="dimension">
        <SUGGESTEDVALUES expanditems="true">
          <LISTITEM value="&lt;Нет&gt;" />
        </SUGGESTEDVALUES>
        <HELPTEXT>Построение, в котором ошибка была исправлена</HELPTEXT>
      </FIELD>
      <!-- **************** Scheduling Fields *************************************************  -->
      <FIELD name="Исходная оценка" refname="Microsoft.VSTS.Scheduling.OriginalEstimate" type="Double" reportable="measure">
        <HELPTEXT>Исходная оценка количества единиц работы, которое потребуется для исправления этой ошибки</HELPTEXT>
      </FIELD>
      <FIELD name="Оставшаяся работа" refname="Microsoft.VSTS.Scheduling.RemainingWork" type="Double" reportable="measure">
        <HELPTEXT>Оценка объема работ, оставшегося до завершения (в человеко-часах)</HELPTEXT>
      </FIELD>
      <FIELD name="Завершенная работа" refname="Microsoft.VSTS.Scheduling.CompletedWork" type="Double" reportable="measure">
        <HELPTEXT>Выполненный объем работы (в человеко-часах)</HELPTEXT>
      </FIELD>
      <FIELD name="Дата начала" refname="Microsoft.VSTS.Scheduling.StartDate" type="DateTime" reportable="dimension" />
      <FIELD name="Дата завершения" refname="Microsoft.VSTS.Scheduling.FinishDate" type="DateTime" reportable="dimension" />
      <FIELD name="Блокировано" refname="Microsoft.VSTS.CMMI.Blocked" type="String" reportable="dimension">
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Да" />
          <LISTITEM value="Нет" />
        </ALLOWEDVALUES>
        <DEFAULT from="value" value="Нет" />
      </FIELD>
      <FIELD name="Симптом" refname="Microsoft.VSTS.CMMI.Symptom" type="HTML" />
      <FIELD name="Предложенное исправление" refname="Microsoft.VSTS.CMMI.ProposedFix" type="HTML" />
      <FIELD name="Найдено в среде" refname="Microsoft.VSTS.CMMI.FoundInEnvironment" type="String" />
      <FIELD name="Основная причина" refname="Microsoft.VSTS.CMMI.RootCause" type="String">
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Ошибка кодирования" />
          <LISTITEM value="Ошибка конструктора" />
          <LISTITEM value="Ошибка спецификации" />
          <LISTITEM value="Ошибка связи" />
          <LISTITEM value="Нет данных" />
        </ALLOWEDVALUES>
        <DEFAULT from="value" value="Нет данных" />
      </FIELD>
      <FIELD name="Как обнаружено" refname="Microsoft.VSTS.CMMI.HowFound" type="String" />
      <FIELD name="Пользовательский тест приемки" refname="Microsoft.VSTS.CMMI.UserAcceptanceTest" type="String">
        <REQUIRED />
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Пройден" />
          <LISTITEM value="Не пройден" />
          <LISTITEM value="Не готов" />
          <LISTITEM value="Готово" />
          <LISTITEM value="Пропущено" />
        </ALLOWEDVALUES>
        <DEFAULT from="value" value="Не готов" />
      </FIELD>
      <FIELD name="Требуется просмотр" refname="Microsoft.VSTS.CMMI.RequiresReview" type="String">
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Да" />
          <LISTITEM value="Нет" />
        </ALLOWEDVALUES>
        <DEFAULT from="value" value="Нет" />
      </FIELD>
      <FIELD name="Требуется тестирование" refname="Microsoft.VSTS.CMMI.RequiresTest" type="String">
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Да" />
          <LISTITEM value="Нет" />
        </ALLOWEDVALUES>
        <DEFAULT from="value" value="Нет" />
      </FIELD>
    </FIELDS>
    <!-- *************** Workflow ****************   -->
    <WORKFLOW>
      <STATES>
        <STATE value="Предложено">
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedDate">
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedBy">
              <ALLOWEXISTINGVALUE />
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedReason">
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <ALLOWEXISTINGVALUE />
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedDate">
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedBy">
              <ALLOWEXISTINGVALUE />
              <EMPTY />
            </FIELD>
          </FIELDS>
        </STATE>
        <STATE value="Активно">
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedDate">
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedBy">
              <ALLOWEXISTINGVALUE />
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedReason">
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <ALLOWEXISTINGVALUE />
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedDate">
              <REQUIRED />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedBy">
              <ALLOWEXISTINGVALUE />
              <REQUIRED />
            </FIELD>
            <FIELD refname="System.AssignedTo">
              <ALLOWEXISTINGVALUE />
              <REQUIRED />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Scheduling.RemainingWork">
              <REQUIRED />
            </FIELD>
            <FIELD refname="IIS.Tester">
              <REQUIRED />
              <ALLOWEXISTINGVALUE />
            </FIELD>
          </FIELDS>
        </STATE>
        <STATE value="В работе">
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Scheduling.RemainingWork">
              <REQUIRED />
            </FIELD>
            <FIELD refname="System.AssignedTo">
              <ALLOWEXISTINGVALUE />
              <REQUIRED />
            </FIELD>
          </FIELDS>
        </STATE>
        <STATE value="Выполнено">
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <ALLOWEXISTINGVALUE />
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedReason">
              <REQUIRED />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedDate">
              <REQUIRED />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedBy">
              <ALLOWEXISTINGVALUE />
              <REQUIRED />
            </FIELD>
            <FIELD refname="System.AssignedTo">
              <ALLOWEXISTINGVALUE />
              <REQUIRED />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Scheduling.CompletedWork">
              <REQUIRED />
            </FIELD>
            <FIELD refname="IIS.Tester">
              <REQUIRED />
            </FIELD>
          </FIELDS>
        </STATE>
        <STATE value="Закрыто">
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <ALLOWEXISTINGVALUE />
              <REQUIRED />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <REQUIRED />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedReason">
              <READONLY />
            </FIELD>
          </FIELDS>
        </STATE>
        <STATE value="Проверка ПР">
          <FIELDS>
            <FIELD refname="IIS.Tester">
              <ALLOWEXISTINGVALUE />
              <EMPTY />
            </FIELD>
          </FIELDS>
        </STATE>
        <STATE value="Установлено на хаб" />
        <STATE value="Установлено на тест" />
      </STATES>
      <TRANSITIONS>
        <TRANSITION from="" to="Предложено">
          <REASONS>
            <REASON value="Не удалось выполнить построение" />
            <DEFAULTREASON value="Новые" />
          </REASONS>
          <FIELDS>
            <FIELD refname="System.AssignedTo">
              <DEFAULT from="currentuser" />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="Предложено" to="Активно">
          <REASONS>
            <REASON value="Исследовать" />
            <DEFAULTREASON value="Принято" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedDate">
              <SERVERDEFAULT from="clock" />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedBy">
              <COPY from="currentuser" />
              <VALIDUSER />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="Активно" to="Предложено">
          <REASONS>
            <DEFAULTREASON value="Отложено" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Активно" to="В работе">
          <ACTIONS>
            <ACTION value="Microsoft.VSTS.Actions.StartWork" />
          </ACTIONS>
          <REASONS>
            <DEFAULTREASON value="Начата работа" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Scheduling.OriginalEstimate">
              <WHEN field="Microsoft.VSTS.Scheduling.OriginalEstimate" value="">
                <COPY from="field" field="Microsoft.VSTS.Scheduling.RemainingWork" />
              </WHEN>
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="Активно" to="Закрыто">
          <REASONS>
            <REASON value="Завершено и не требует просмотра или тестирования" />
            <DEFAULTREASON value="Отменено" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <SERVERDEFAULT from="clock" />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <ALLOWEXISTINGVALUE />
              <COPY from="currentuser" />
              <VALIDUSER />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="В работе" to="Выполнено">
          <ACTIONS>
            <ACTION value="Microsoft.VSTS.Actions.Checkin" />
          </ACTIONS>
          <REASONS>
            <REASON value="Не воспроизводится">
              <FIELDS>
                <FIELD refname="Microsoft.VSTS.Common.ResolvedReason">
                  <COPY from="value" value="Не воспроизводится" />
                  <ALLOWEDVALUES expanditems="true">
                    <LISTITEM value="Не воспроизводится" />
                  </ALLOWEDVALUES>
                </FIELD>
              </FIELDS>
            </REASON>
            <REASON value="Дубликат">
              <FIELDS>
                <FIELD refname="Microsoft.VSTS.Common.ResolvedReason">
                  <COPY from="value" value="Дубликат" />
                  <ALLOWEDVALUES expanditems="true">
                    <LISTITEM value="Дубликат" />
                  </ALLOWEDVALUES>
                </FIELD>
              </FIELDS>
            </REASON>
            <REASON value="Не ошибка">
              <FIELDS>
                <FIELD refname="Microsoft.VSTS.Common.ResolvedReason">
                  <COPY from="value" value="Не ошибка" />
                  <ALLOWEDVALUES expanditems="true">
                    <LISTITEM value="Не ошибка" />
                  </ALLOWEDVALUES>
                </FIELD>
              </FIELDS>
            </REASON>
            <REASON value="Устарело">
              <FIELDS>
                <FIELD refname="Microsoft.VSTS.Common.ResolvedReason">
                  <COPY from="value" value="Устарело" />
                  <ALLOWEDVALUES expanditems="true">
                    <LISTITEM value="Устарело" />
                  </ALLOWEDVALUES>
                </FIELD>
              </FIELDS>
            </REASON>
            <DEFAULTREASON value="Исправлено">
              <FIELDS>
                <FIELD refname="Microsoft.VSTS.Common.ResolvedReason">
                  <COPY from="value" value="Исправлено" />
                  <ALLOWEDVALUES expanditems="true">
                    <LISTITEM value="Исправлено" />
                  </ALLOWEDVALUES>
                </FIELD>
              </FIELDS>
            </DEFAULTREASON>
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedDate">
              <SERVERDEFAULT from="clock" />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedBy">
              <ALLOWEXISTINGVALUE />
              <COPY from="currentuser" />
              <VALIDUSER />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedReason">
              <COPY from="value" value="Исправлено" />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Scheduling.RemainingWork">
              <EMPTY />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="В работе" to="Активно">
          <ACTIONS>
            <ACTION value="Microsoft.VSTS.Actions.StopWork" />
          </ACTIONS>
          <REASONS>
            <REASON value="Требуется уточнение" />
            <DEFAULTREASON value="Отложено" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Выполнено" to="Активно">
          <REASONS>
            <REASON value="Тест не пройден" />
            <DEFAULTREASON value="Не исправлено" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedBy">
              <ALLOWEXISTINGVALUE />
              <COPY from="currentuser" />
              <VALIDUSER />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedDate">
              <SERVERDEFAULT from="clock" />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="Выполнено" to="Закрыто">
          <REASONS>
            <DEFAULTREASON value="Проверено" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <SERVERDEFAULT from="clock" />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <ALLOWEXISTINGVALUE />
              <COPY from="currentuser" />
              <VALIDUSER />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="Предложено" to="Закрыто">
          <REASONS>
