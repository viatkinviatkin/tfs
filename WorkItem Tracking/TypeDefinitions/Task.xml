<?xml version="1.0" encoding="utf-8"?>
<Witd:WITD application="Work item type editor" version="1.0" xmlns:Witd="http://schemas.microsoft.com/VisualStudio/2008/workitemtracking/typedef">
  <WORKITEMTYPE name="Задача" refname="Microsoft.VSTS.WorkItemTypes.Task">
    <DESCRIPTION>Включает сведения для отслеживания задачи в течение жизненного цикла проекта</DESCRIPTION>
    <FIELDS>
      <FIELD name="ID" refname="System.Id" type="Integer" reportable="dimension" />
      <FIELD name="Название" refname="System.Title" type="String" reportable="dimension">
        <REQUIRED />
        <HELPTEXT>Краткое описание задачи, используемое для ее различения в списке или отчете</HELPTEXT>
      </FIELD>
      <FIELD name="Кому назначено" refname="System.AssignedTo" type="String" reportable="dimension" syncnamechanges="true">
        <VALIDUSER />
        <WHENNOT value="Предложено" field="System.State">
          <REQUIRED />
        </WHENNOT>
        <ALLOWEXISTINGVALUE />
        <ALLOWEDVALUES expanditems="true" filteritems="excludegroups">
          <LISTITEM value="[Project]\Участники" />
        </ALLOWEDVALUES>
        <HELPTEXT>Кто занимается решением этой задачи</HELPTEXT>
      </FIELD>
      <FIELD name="Кто проверяет" refname="IIS.Tester" type="String" reportable="dimension">
        <VALIDUSER />
        <WHENNOT value="Предложено" field="System.State">
          <REQUIRED />
        </WHENNOT>
        <ALLOWEXISTINGVALUE />
        <ALLOWEDVALUES expanditems="true" filteritems="excludegroups">
          <LISTITEM value="[Project]\Участники" />
        </ALLOWEDVALUES>
        <HELPTEXT>Кто проверяет выполнение задачи</HELPTEXT>
      </FIELD>
      <FIELD name="Журнал" refname="System.History" type="History">
        <HELPTEXT>Поток дискуссии и другие накопленные сведения</HELPTEXT>
      </FIELD>
      <FIELD name="Путь области" refname="System.AreaPath" type="TreePath" reportable="dimension">
        <HELPTEXT>Область продукта, с которой связана эта задача</HELPTEXT>
      </FIELD>
      <FIELD name="Путь итерации" refname="System.IterationPath" type="TreePath" reportable="dimension">
        <HELPTEXT>Итерация продукта, с которой связана эта задача</HELPTEXT>
      </FIELD>
      <FIELD name="Состояние" refname="System.State" type="String" reportable="dimension">
        <HELPTEXT>Состояние рабочего процесса задачи</HELPTEXT>
      </FIELD>
      <FIELD name="Причина" refname="System.Reason" type="String" reportable="dimension">
        <HELPTEXT>Причина, по которой задача находится в текущем состоянии</HELPTEXT>
      </FIELD>
      <FIELD name="Дата изменения" refname="System.ChangedDate" type="DateTime" reportable="dimension" />
      <FIELD name="Кем изменено" refname="System.ChangedBy" type="String" reportable="dimension" syncnamechanges="true">
        <VALIDUSER />
        <ALLOWEXISTINGVALUE />
      </FIELD>
      <FIELD name="Дата создания" refname="System.CreatedDate" type="DateTime" reportable="dimension" />
      <FIELD name="Кем создано" refname="System.CreatedBy" type="String" reportable="dimension" syncnamechanges="true" />
      <FIELD name="Описание" refname="System.Description" type="HTML">
        <HELPTEXT>Описание реализации этой задачи со ссылками на ресурсы и дополнительные документы</HELPTEXT>
      </FIELD>
      <!--  *************** Common Fields ****************-->
      <FIELD name="Дата изменения состояния" refname="Microsoft.VSTS.Common.StateChangeDate" type="DateTime">
        <WHENCHANGED field="System.State">
          <SERVERDEFAULT from="clock" />
        </WHENCHANGED>
        <WHENNOTCHANGED field="System.State">
          <READONLY />
        </WHENNOTCHANGED>
      </FIELD>
      <FIELD name="Дата активации" refname="Microsoft.VSTS.Common.ActivatedDate" type="DateTime" reportable="dimension">
        <WHENNOTCHANGED field="System.State">
          <READONLY />
        </WHENNOTCHANGED>
      </FIELD>
      <FIELD name="Активировал" refname="Microsoft.VSTS.Common.ActivatedBy" type="String" syncnamechanges="true" reportable="dimension">
        <WHENNOTCHANGED field="System.State">
          <READONLY />
        </WHENNOTCHANGED>
        <ALLOWEXISTINGVALUE />
      </FIELD>
      <FIELD name="Причина выполнения" refname="Microsoft.VSTS.Common.ResolvedReason" type="String" reportable="dimension" />
      <FIELD name="Дата закрытия" refname="Microsoft.VSTS.Common.ClosedDate" type="DateTime" reportable="dimension">
        <WHENNOTCHANGED field="System.State">
          <READONLY />
        </WHENNOTCHANGED>
      </FIELD>
      <FIELD name="Кем закрыто" refname="Microsoft.VSTS.Common.ClosedBy" type="String" syncnamechanges="true" reportable="dimension">
        <WHENNOTCHANGED field="System.State">
          <READONLY />
        </WHENNOTCHANGED>
        <ALLOWEXISTINGVALUE />
      </FIELD>
      <FIELD name="Дата выполнения" refname="Microsoft.VSTS.Common.ResolvedDate" type="DateTime" reportable="dimension">
        <WHENNOTCHANGED field="System.State">
          <READONLY />
        </WHENNOTCHANGED>
      </FIELD>
      <FIELD name="Кем выполнено" refname="Microsoft.VSTS.Common.ResolvedBy" type="String" syncnamechanges="true" reportable="dimension">
        <WHENNOTCHANGED field="System.State">
          <READONLY />
        </WHENNOTCHANGED>
        <ALLOWEXISTINGVALUE />
      </FIELD>
      <FIELD name="Приоритет" refname="Microsoft.VSTS.Common.Priority" type="Integer" reportable="dimension">
        <REQUIRED />
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="1" />
          <LISTITEM value="2" />
          <LISTITEM value="3" />
          <LISTITEM value="4" />
        </ALLOWEDVALUES>
        <DEFAULT from="value" value="1" />
        <HELPTEXT>Общий приоритет задачи с учетом целей проекта</HELPTEXT>
      </FIELD>
      <FIELD name="Ранг стека" refname="Microsoft.VSTS.Common.StackRank" type="Double" reportable="dimension">
        <DEFAULT from="value" value="1" />
        <SUGGESTEDVALUES expanditems="true">
          <LISTITEM value="1" />
          <LISTITEM value="2" />
          <LISTITEM value="3" />
          <LISTITEM value="4" />
          <LISTITEM value="5" />
        </SUGGESTEDVALUES>
        <HELPTEXT>Приоритет работы над элементом по сравнению с другими рабочими элементами того же типа.</HELPTEXT>
      </FIELD>
      <FIELD name="Рассмотрение" refname="Microsoft.VSTS.Common.Triage" type="String" reportable="dimension">
        <REQUIRED />
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Подготовка" />
          <LISTITEM value="Ожидание" />
          <LISTITEM value="Доработать" />
          <LISTITEM value="Согласовано" />
        </ALLOWEDVALUES>
        <DEFAULT from="value" value="Подготовка" />
        <HELPTEXT>Состояние рассмотрения задачи</HELPTEXT>
      </FIELD>
      <FIELD name="Операция" refname="Microsoft.VSTS.Common.Activity" type="String" reportable="dimension">
        <SUGGESTEDVALUES expanditems="true">
          <LISTITEM value="Анализ" />
          <LISTITEM value="Проектирование" />
          <LISTITEM value="Разработка" />
          <LISTITEM value="Тестирование" />
          <LISTITEM value="Документирование" />
          <LISTITEM value="Развертывание" />
          <LISTITEM value="Поддержка" />
        </SUGGESTEDVALUES>
        <DEFAULT from="value" value="Разработка" />
      </FIELD>
      <FIELD name="Дисциплина" refname="Microsoft.VSTS.Common.Discipline" type="String" reportable="dimension">
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Анализ" />
          <LISTITEM value="Взаимодействие с пользователем" />
          <LISTITEM value="Обучение пользователей" />
          <LISTITEM value="Разработка" />
          <LISTITEM value="Тест" />
        </ALLOWEDVALUES>
        <HELPTEXT>Дисциплина, к которой относится задача</HELPTEXT>
      </FIELD>
      <!--  **************** Build Integration Fields *******************************************-->
      <FIELD name="Построение интеграции" refname="Microsoft.VSTS.Build.IntegrationBuild" type="String" reportable="dimension">
        <SUGGESTEDVALUES expanditems="true">
          <LISTITEM value="&lt;Нет&gt;" />
        </SUGGESTEDVALUES>
        <HELPTEXT>Построение, в котором задача была завершена</HELPTEXT>
      </FIELD>
      <!--  *************** MSF for CMMI PI Fields ****************-->
      <FIELD name="Тип задачи" refname="Microsoft.VSTS.CMMI.TaskType" type="String" reportable="dimension">
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Корректирующее действие" />
          <LISTITEM value="Действие по уменьшению" />
          <LISTITEM value="Запланировано" />
        </ALLOWEDVALUES>
        <DEFAULT from="value" value="Запланировано" />
      </FIELD>
      <FIELD name="Требуется просмотр" refname="Microsoft.VSTS.CMMI.RequiresReview" type="String">
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Да" />
          <LISTITEM value="Нет" />
        </ALLOWEDVALUES>
        <DEFAULT from="value" value="Нет" />
      </FIELD>
      <FIELD name="Требуется тестирование" refname="Microsoft.VSTS.CMMI.RequiresTest" type="String">
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Да" />
          <LISTITEM value="Нет" />
        </ALLOWEDVALUES>
        <DEFAULT from="value" value="Нет" />
      </FIELD>
      <FIELD name="Блокировано" refname="Microsoft.VSTS.CMMI.Blocked" type="String" reportable="dimension">
        <REQUIRED />
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Да" />
          <LISTITEM value="Нет" />
        </ALLOWEDVALUES>
        <DEFAULT from="value" value="Нет" />
      </FIELD>
      <FIELD name="Пользовательский тест приемки" refname="Microsoft.VSTS.CMMI.UserAcceptanceTest" type="String">
        <REQUIRED />
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Пройден" />
          <LISTITEM value="Не пройден" />
          <LISTITEM value="Не готов" />
          <LISTITEM value="Готово" />
          <LISTITEM value="Пропущено" />
        </ALLOWEDVALUES>
        <DEFAULT from="value" value="Не готов" />
      </FIELD>
      <!--  **************** Scheduling Fields *************************************************  
  -->
      <FIELD name="Исходная оценка" refname="Microsoft.VSTS.Scheduling.OriginalEstimate" type="Double" reportable="measure">
        <HELPTEXT>Первоначальная оценка объема работы, требуемого для выполнения задачи (в человеко-часах)</HELPTEXT>
      </FIELD>
      <FIELD name="Оставшаяся работа" refname="Microsoft.VSTS.Scheduling.RemainingWork" type="Double" reportable="measure">
        <HELPTEXT>Оценка объема работ, оставшегося до завершения задачи (в человеко-часах)</HELPTEXT>
      </FIELD>
      <FIELD name="Завершенная работа" refname="Microsoft.VSTS.Scheduling.CompletedWork" type="Double" reportable="measure">
        <HELPTEXT>Объем работы, выполненный для данной задачи (в человеко-часах)</HELPTEXT>
      </FIELD>
      <FIELD name="Дата начала" refname="Microsoft.VSTS.Scheduling.StartDate" type="DateTime" reportable="dimension" />
      <FIELD name="Дата завершения" refname="Microsoft.VSTS.Scheduling.FinishDate" type="DateTime" reportable="dimension" />
    </FIELDS>
    <WORKFLOW>
      <STATES>
        <STATE value="Предложено">
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedDate">
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedBy">
              <ALLOWEXISTINGVALUE />
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <ALLOWEXISTINGVALUE />
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedDate">
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedBy">
              <ALLOWEXISTINGVALUE />
              <EMPTY />
            </FIELD>
          </FIELDS>
        </STATE>
        <STATE value="Активно">
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedDate">
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedBy">
              <ALLOWEXISTINGVALUE />
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedReason">
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <ALLOWEXISTINGVALUE />
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedDate">
              <REQUIRED />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedBy">
              <ALLOWEXISTINGVALUE />
              <REQUIRED />
            </FIELD>
            <FIELD refname="System.AssignedTo">
              <ALLOWEXISTINGVALUE />
              <REQUIRED />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Scheduling.RemainingWork">
              <REQUIRED />
            </FIELD>
            <FIELD refname="IIS.Tester">
              <REQUIRED />
              <ALLOWEXISTINGVALUE />
            </FIELD>
          </FIELDS>
        </STATE>
        <STATE value="В работе">
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Scheduling.RemainingWork">
              <ALLOWEXISTINGVALUE />
              <REQUIRED />
            </FIELD>
            <FIELD refname="System.AssignedTo">
              <ALLOWEXISTINGVALUE />
              <REQUIRED />
            </FIELD>
          </FIELDS>
        </STATE>
        <STATE value="Выполнено">
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <ALLOWEXISTINGVALUE />
              <EMPTY />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedReason">
              <COPY from="field" field="System.Reason" />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedDate">
              <REQUIRED />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedBy">
              <ALLOWEXISTINGVALUE />
              <REQUIRED />
            </FIELD>
            <FIELD refname="System.AssignedTo">
              <ALLOWEXISTINGVALUE />
              <REQUIRED />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Scheduling.CompletedWork">
              <REQUIRED />
            </FIELD>
            <FIELD refname="IIS.Tester">
              <REQUIRED />
            </FIELD>
          </FIELDS>
        </STATE>
        <STATE value="Закрыто">
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <ALLOWEXISTINGVALUE />
              <REQUIRED />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <REQUIRED />
            </FIELD>
          </FIELDS>
        </STATE>
      </STATES>
      <TRANSITIONS>
        <TRANSITION from="" to="Предложено">
          <REASONS>
            <DEFAULTREASON value="Новые" />
          </REASONS>
          <FIELDS>
            <FIELD refname="System.AssignedTo">
              <DEFAULT from="currentuser" />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="Предложено" to="Активно">
          <REASONS>
            <REASON value="Исследовать" />
            <DEFAULTREASON value="Принято" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedDate">
              <SERVERDEFAULT from="clock" />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedBy">
              <ALLOWEXISTINGVALUE />
              <COPY from="currentuser" />
              <VALIDUSER />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="Активно" to="Предложено">
          <REASONS>
            <DEFAULTREASON value="Отложено" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Активно" to="В работе">
          <ACTIONS>
            <ACTION value="Microsoft.VSTS.Actions.StartWork" />
          </ACTIONS>
          <REASONS>
            <DEFAULTREASON value="Начата работа" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Scheduling.OriginalEstimate">
              <WHEN field="Microsoft.VSTS.Scheduling.OriginalEstimate" value="">
                <COPY from="field" field="Microsoft.VSTS.Scheduling.RemainingWork" />
              </WHEN>
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="Активно" to="Закрыто">
          <REASONS>
            <REASON value="Завершено и не требует просмотра или тестирования" />
            <DEFAULTREASON value="Отменено" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <SERVERDEFAULT from="clock" />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <ALLOWEXISTINGVALUE />
              <COPY from="currentuser" />
              <VALIDUSER />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="В работе" to="Выполнено">
          <ACTIONS>
            <ACTION value="Microsoft.VSTS.Actions.Checkin" />
          </ACTIONS>
          <REASONS>
            <DEFAULTREASON value="Выполнено" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedBy">
              <ALLOWEXISTINGVALUE />
              <COPY from="currentuser" />
              <VALIDUSER />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ResolvedDate">
              <SERVERDEFAULT from="clock" />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Scheduling.RemainingWork">
              <EMPTY />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="В работе" to="Активно">
          <ACTIONS>
            <ACTION value="Microsoft.VSTS.Actions.StopWork" />
          </ACTIONS>
          <REASONS>
            <REASON value="Требуется уточнение" />
            <DEFAULTREASON value="Отложено" />
          </REASONS>
        </TRANSITION>
        <TRANSITION from="Выполнено" to="Активно">
          <REASONS>
            <DEFAULTREASON value="Требуется доработка" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedBy">
              <ALLOWEXISTINGVALUE />
              <COPY from="currentuser" />
              <VALIDUSER />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedDate">
              <SERVERDEFAULT from="clock" />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="Выполнено" to="Закрыто">
          <REASONS>
            <DEFAULTREASON value="Проверено" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <SERVERDEFAULT from="clock" />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <ALLOWEXISTINGVALUE />
              <COPY from="currentuser" />
              <VALIDUSER />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="Предложено" to="Закрыто">
          <REASONS>
            <REASON value="Дубликат" />
            <DEFAULTREASON value="Отклонено" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ClosedDate">
              <SERVERDEFAULT from="clock" />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ClosedBy">
              <ALLOWEXISTINGVALUE />
              <COPY from="currentuser" />
              <VALIDUSER />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="Закрыто" to="Активно">
          <REASONS>
            <REASON value="Закрыто по ошибке" />
            <DEFAULTREASON value="Реактивирование" />
          </REASONS>
          <FIELDS>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedBy">
              <ALLOWEXISTINGVALUE />
              <COPY from="currentuser" />
              <VALIDUSER />
            </FIELD>
            <FIELD refname="Microsoft.VSTS.Common.ActivatedDate">
              <SERVERDEFAULT from="clock" />
            </FIELD>
          </FIELDS>
        </TRANSITION>
        <TRANSITION from="Закрыто" to="Предложено">
          <REASONS>
            <DEFAULTREASON value="Реактивирование" />
          </REASONS>
        </TRANSITION>
      </TRANSITIONS>
    </WORKFLOW>
    <FORM>
      <Layout HideReadOnlyEmptyFields="false" HideControlBorders="false">
        <Group>
          <Column PercentWidth="100">
            <Control Type="FieldControl" FieldName="System.Title" ControlFontSize="large" EmptyText="&lt;Введите здесь заголовок&gt;" LabelPosition="Top" />
          </Column>
        </Group>
        <Group>
          <Column PercentWidth="25">
            <Group Label="Статус">
              <Column PercentWidth="100">
                <Control FieldName="System.State" Type="FieldControl" Label="&amp;Состояние" LabelPosition="Left" />
                <Control FieldName="System.Reason" Type="FieldControl" Label="При&amp;чина" LabelPosition="Left" />
                <Control FieldName="Microsoft.VSTS.Common.Triage" Type="FieldControl" Label="&amp;Рассмотрение" LabelPosition="Left" />
              </Column>
            </Group>
          </Column>
          <Column PercentWidth="30">
            <Group Label="Ответственные">
              <Column PercentWidth="100">
                <Control FieldName="System.CreatedBy" Type="FieldControl" Label="Автор" LabelPosition="Left" />
                <Control FieldName="System.AssignedTo" Type="FieldControl" Label="Исполнитель" LabelPosition="Left" />
                <Control FieldName="IIS.Tester" Type="FieldControl" Label="Проверяет" LabelPosition="Left" />
              </Column>
            </Group>
          </Column>
          <Column PercentWidth="35">
            <Group Label="Классификация">
              <Column PercentWidth="100">
                <Control FieldName="Microsoft.VSTS.Common.Activity" Type="FieldControl" Label="Вид работ" LabelPosition="Left" />
                <Control Type="WorkItemClassificationControl" FieldName="System.AreaPath" Label="&amp;Область" LabelPosition="Left" />
                <Control Type="WorkItemClassificationControl" FieldName="System.IterationPath" Label="Ите&amp;рация" LabelPosition="Left" />
              </Column>
            </Group>
          </Column>
          <Column FixedWidth="170">
            <Group Label="Планирование">
              <Column PercentWidth="100">
                <Group>
                  <Column PercentWidth="100">
                    <Control FieldName="Microsoft.VSTS.Scheduling.FinishDate" Type="DateTimeControl" Label="Завершить" LabelPosition="Left" Dock="Left" Name="FinishDate" />
                  </Column>
                </Group>
                <Group>
                  <Column PercentWidth="60">
                    <Control FieldName="Microsoft.VSTS.Scheduling.RemainingWork" Type="FieldControl" Label="Осталось" LabelPosition="Left" Dock="Left" MinimumSize="(10,10)" EmptyText="часов" NumberFormat="DecimalNumbers" MaxLength="10" />
                    <Control FieldName="Microsoft.VSTS.Common.Priority" Type="FieldControl" Label="Приоритет" LabelPosition="Left" MinimumSize="(10,10)" />
                  </Column>
                  <Column PercentWidth="40">
                    <Control FieldName="Microsoft.VSTS.Scheduling.CompletedWork" Type="FieldControl" Label="Факт" LabelPosition="Left" MinimumSize="(10,10)" Name="Fact" EmptyText="часов" />
                    <Control FieldName="Microsoft.VSTS.Common.StackRank" Type="FieldControl" Label="Ранг" LabelPosition="Left" MinimumSize="(10,10)" />
                  </Column>
                </Group>
              </Column>
            </Group>
          </Column>
        </Group>
        <TabGroup>
          <Tab Label="Описание">
